<%- include("partials/header") -%>

<h1>Login</h1>

<div class="row">
  <div class="col-sm-8">
    <div class="card">
      <div class="card-body">
        <!--Make POST request to login route -->
        <form action="/login" method="post">
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="email" class="form-control">
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="password" class="form-control">
          </div>
          <button type="submit" name="login-button" class="btn btn-secondary login-btn">Login</button>
        </form>

          <div class="login-or-group">
            <div class="login-hr"></div>
            <span>OR</span>
            <div class="login-hr"></div>
          </div>

          <div class="login-or-group">
            <p><a href="#">Create an account</a> for free!</p>
          </div>

      </div>
    </div>
  </div>

  <div class="col-sm-4">
    <div class="card">
      <div class="card-body">
        <!--Authenticate with Google account -->
        <a class="btn col-12 btn-social btn-google" href="/auth/google" role="button">
          <i class="fab fa-google"></i>
          Sign In with Google
        </a>
      </div>
    </div>
  </div>


</div>






</div>
<%- include("partials/footer") -%>
